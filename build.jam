import project ;

path-constant HASH_PREDEF_ROOT : . ;
path-constant HASH_PREDEF_INCLUDE : include ;
constant PREDEF_DIST : hash ;

project /hash-predef ;

local attributes = [ project.attributes $(__name__) ] ;
local is-jamroot = [ project.is-jamroot-module $(__name__) ] ;
if ( $(PREDEF_DIST) = hash ) || ( ( $(PREDEF_DIST) = boost ) && $(is-jamroot) )
{
    $(attributes).set "requirements" :
        <include>$(HASH_PREDEF_INCLUDE) ;
}
if $(is-jamroot)
{
    $(attributes).set "build-dir" : bin ;
}
